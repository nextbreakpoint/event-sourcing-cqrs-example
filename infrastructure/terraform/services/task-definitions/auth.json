[
  {
    "Name": "auth",
    "Image": "registry.nextbreakpoint.com/services/auth:1.0.0",
    "Essential": true,
    "Memory": 600,
    "Cpu": 512,
    "PortMappings": [
      {
        "ContainerPort": 3000,
        "HostPort": 3000
      }
    ],
    "MountPoints": [
      {
        "ContainerPath" : "/config",
        "SourceVolume" : "config",
        "ReadOnly" : true
      }
    ],
    "environment" : [
      { "name": "SECRETS_BUCKET_NAME", "value": "services-secrets" },
      { "name": "ENVIRONMENT", "value": "production" }
    ],
    "ulimits": [
      {
        "name": "nofile",
        "hardLimit": 4096,
        "softLimit": 4096
      }
    ]
  }
]
