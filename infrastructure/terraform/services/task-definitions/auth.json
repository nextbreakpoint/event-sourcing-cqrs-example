[
  {
    "Name": "auth",
    "Image": "${account_id}.dkr.ecr.eu-west-1.amazonaws.com/services/auth:1.0.0",
    "Essential": true,
    "Memory": 600,
    "Cpu": 512,
    "PortMappings": [
      {
        "ContainerPort": 3000,
        "HostPort": 3000
      }
    ],
    "environment" : [
      { "name": "SECRETS_BUCKET_NAME", "value": "${bucket_name}" },
      { "name": "ENVIRONMENT", "value": "production" }
    ],
    "ulimits": [
      {
        "name": "nofile",
        "hardLimit": 4096,
        "softLimit": 4096
      }
    ]
  }
]
