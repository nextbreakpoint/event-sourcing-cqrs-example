[
  {
    "Name": "designs",
    "Image": "registry.nextbreakpoint.com/services/designs:1.0.0",
    "Essential": true,
    "Memory": 1100,
    "Cpu": 1024,
    "PortMappings": [
      {
        "ContainerPort": 3001,
        "HostPort": 3001
      }
    ],
    "MountPoints": [
      {
        "ContainerPath" : "/config",
        "SourceVolume" : "config",
        "ReadOnly" : true
      }
    ],
    "environment" : [
      { "name": "SECRETS_BUCKET_NAME", "value": "services-secrets" },
      { "name": "ENVIRONMENT", "value": "production" }
    ],
    "ulimits": [
      {
        "name": "nofile",
        "hardLimit": 4096,
        "softLimit": 4096
      }
    ]
  }
]
