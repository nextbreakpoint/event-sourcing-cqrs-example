[
  {
    "Name": "designs",
    "Image": "${account_id}.dkr.ecr.eu-west-1.amazonaws.com/services/designs:1.0.0",
    "Essential": true,
    "Memory": 1100,
    "Cpu": 1024,
    "PortMappings": [
      {
        "ContainerPort": 3001,
        "HostPort": 3001
      }
    ],
    "environment" : [
      { "name": "SECRETS_BUCKET_NAME", "value": "${bucket_name}" },
      { "name": "ENVIRONMENT", "value": "production" }
    ],
    "ulimits": [
      {
        "name": "nofile",
        "hardLimit": 4096,
        "softLimit": 4096
      }
    ]
  }
]
