[
  {
    "Name": "nginx",
    "Image": "${account_id}.dkr.ecr.eu-west-1.amazonaws.com/services/nginx:1.0.0",
    "Essential": true,
    "Memory": 600,
    "Cpu": 512,
    "PortMappings": [
      {
        "ContainerPort": 443,
        "HostPort": 443
      },
      {
        "ContainerPort": 80,
        "HostPort": 80
      }
    ],
    "environment" : [
      { "name": "SECRETS_BUCKET_NAME", "value": "${bucket_name}" },
      { "name": "ENVIRONMENT", "value": "production" }
    ],
    "ulimits": [
      {
        "name": "nofile",
        "hardLimit": 4096,
        "softLimit": 4096
      }
    ]
  }
]
