[
  {
    "Name": "web",
    "Image": "${account_id}.dkr.ecr.eu-west-1.amazonaws.com/services/web:1.0.0",
    "Essential": true,
    "Memory": 600,
    "Cpu": 512,
    "PortMappings": [
      {
        "ContainerPort": 8080,
        "HostPort": 8080
      }
    ],
    "environment" : [
      { "name": "SECRETS_BUCKET_NAME", "value": "${bucket_name}" },
      { "name": "ENVIRONMENT", "value": "production" },
      { "name": "SERVICE_8080_NAME", "value": "web" }
    ],
    "ulimits": [
      {
        "name": "nofile",
        "hardLimit": 4096,
        "softLimit": 4096
      }
    ]
  }
]
