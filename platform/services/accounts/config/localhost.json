{
  "host_port": "3002",

  "server_keystore_path": "../../secrets/keystore-server.jks",
  "server_keystore_secret": "${KEYSTORE_SECRET}",

  "jwt_keystore_path": "../../secrets/keystore-auth.jceks",
  "jwt_keystore_type": "jceks",
  "jwt_keystore_secret": "${KEYSTORE_SECRET}",

  "origin_pattern": "https://localhost(:[0-9]+)?",

  "jdbc_url": "jdbc:mysql://localhost:3306/accounts?useSSL=false&allowPublicKeyRetrieval=true&nullNamePatternMatchesAll=true",
  "jdbc_driver": "com.mysql.cj.jdbc.Driver",
  "jdbc_username": "${DATABASE_USERNAME}",
  "jdbc_password": "${DATABASE_PASSWORD}",
  "jdbc_max_pool_size": "200",
  "jdbc_min_pool_size": "20",

  "graphite_reporter_enabled": "false",
  "graphite_host": "localhost",
  "graphite_port": "2003"
}