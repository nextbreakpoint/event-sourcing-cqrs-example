<settings>
    <servers>
        <server>
            <id>nexus</id>
            <username>${env.NEXUS_USERNAME}</username>
            <password>${env.NEXUS_PASSWORD}</password>
        </server>
    </servers>
    <mirrors>
        <mirror>
            <id>nexus-maven-central</id>
            <name>Nexus - Maven Central</name>
            <url>http://${env.NEXUS_HOST}:${env.NEXUS_PORT}/repository/maven-central</url>
            <mirrorOf>*,!nexus</mirrorOf>
        </mirror>
        <mirror>
            <id>nexus-maven-internal</id>
            <name>Nexus - Maven Internal</name>
            <url>http://${env.NEXUS_HOST}:${env.NEXUS_PORT}/repository/maven-internal</url>
            <mirrorOf>nexus</mirrorOf>
        </mirror>
    </mirrors>
</settings>
