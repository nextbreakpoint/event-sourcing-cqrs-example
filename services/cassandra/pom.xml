<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>com.nextbreakpoint</groupId>
        <artifactId>com.nextbreakpoint.shop</artifactId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>com.nextbreakpoint.shop.cassandra</artifactId>
    <packaging>pom</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>${docker-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>start-infrastructure</id>
                        <phase>none</phase>
                        <goals>
                            <goal>start</goal>
                        </goals>
                        <configuration>
                            <showLogs>true</showLogs>
                            <autoCreateCustomNetworks>true</autoCreateCustomNetworks>
                            <images>
                                <image>
                                    <name>nextbreakpoint/cassandra:3.11-1</name>
                                    <alias>cassandra</alias>
                                    <run>
                                        <ports>
                                            <port>9042:9042</port>
                                        </ports>
                                        <env>
                                            <CASSANDRA_RACK>rack1</CASSANDRA_RACK>
                                            <CASSANDRA_DC>datacenter1</CASSANDRA_DC>
                                            <JVM_OPTS>-Xms2G -Xmx2G</JVM_OPTS>
                                        </env>
                                        <volumes>
                                            <bind>
                                                <volume>${project.basedir}/scripts:/docker-entrypoint-initdb.d</volume>
                                            </bind>
                                        </volumes>
                                        <network>
                                            <mode>custom</mode>
                                            <name>shop-dev</name>
                                            <alias>cassandra</alias>
                                        </network>
                                        <wait>
                                            <log>Created default superuser role 'cassandra'</log>
                                            <time>60000</time>
                                        </wait>
                                    </run>
                                </image>
                            </images>
                        </configuration>
                    </execution>
                    <execution>
                        <id>stop-infrastructure</id>
                        <phase>none</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                        <configuration>
                            <images>
                                <image>
                                    <name>nextbreakpoint/cassandra:3.11-1</name>
                                    <alias>cassandra</alias>
                                </image>
                            </images>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
