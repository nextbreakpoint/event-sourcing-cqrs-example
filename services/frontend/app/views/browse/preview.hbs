<body>
    <header><p><b>Fractals</b> | The Beauty of Chaos</p></header>
    <section id="preview" class="preview">
        {{#each data}}
            <div class="row">
            {{#each .}}
                <div class="cell"><img src="{{imageUrl}}"/></div>
            {{/each}}
            </div>
        {{/each}}
    </section>
    <navigation class="close">
        <div>
            <a href="/browse/designs.html">Close</a>
        </div>
    </navigation>
    <footer>
        <p>Powered by <a href="https://nextbreakpoint.com">NextBreakpoint</a>{{#if admin}} | <a href="../../admin/designs/{{uuid}}.html">Edit</a>{{/if}}{{#if login}} | <a href="{{config.api_url}}/v1/auth/signin/browse/designs/{{uuid}}.html">Login</a>{{/if}}{{#if logout}} | <a href="{{config.api_url}}/v1/auth/signout/browse/designs/{{uuid}}.html">Logout</a>{{/if}}</p>
    </footer>
    <input type="hidden" id="uuid" value="{{uuid}}"/>
    <script>
        domReady(function(event) {
            function configure() {
                let preview = document.getElementById("preview");
                preview.innerHTML = "";

                resize();

                let map = L.map('preview').setView([0, 0], 4);

                let url = '{{config.api_url}}/v1/designs/{{design.uuid}}/{z}/{x}/{y}/256.png?t={{design.checksum}}';

                let layer = L.tileLayer(url, {
                    attribution: '',
                    detectRetina: true,
                    bounds: [[-180, -180],[180, 180]],
                    minZoom: 2,
                    maxZoom: 7,
                    tileSize: 256,
                    updateWhenIdle: true,
                    updateWhenZooming: false,
                    updateInterval: 500,
                    keepBuffer: 2,
                    noWrap: true
                });

                map.zoomControl.setPosition('bottomleft');
                map.attributionControl.setPrefix('');

                layer.addTo(map);
            }

            function resize() {
                let width = window.innerWidth;
                let height = window.innerHeight;
                let elements = document.querySelectorAll(".preview");
                for (let i = 0; i < elements.length; i++) {
                    elements[i].style.width = width + "px";
                    elements[i].style.height = height + "px";
                }
            }

            window.addEventListener('resize', function(e) {
                resize();
            });

            configure();
        })
    </script>
</body>
